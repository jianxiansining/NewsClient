<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="120dp">

    <ImageView
        android:id="@+id/menu_news_data_show_icon"
        android:layout_width="100dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:layout_height="70dp"
        android:src="@drawable/pic_item_list_default"
        />
    <LinearLayout
        android:layout_toRightOf="@id/menu_news_data_show_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/menu_news_data_show_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textSize="20sp"
            android:text="标题"
            />
        <TextView
            android:id="@+id/menu_news_data_show_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"
            android:textSize="16sp"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/menu_news_data_show_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/icon_news_comment_num"
        />
</RelativeLayout>