<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <com.jxsn.newsclient.view.FocusViewPager
            android:id="@+id/ui_menu_news_categoriesdata_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.jxsn.newsclient.view.FocusViewPager>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#33000000">

            <TextView
                android:id="@+id/ui_menu_news_categoriesdata_pictitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:text="图片标题"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                />
            <!-- 小圆点-->
            <LinearLayout
                android:id="@+id/ui_menu_news_categoriesdata_pager_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                >

<!--                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/dot_focus"
                    />

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/dot_focus"
                    />

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/dot_focus"
                    />-->

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>